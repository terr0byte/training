{
  "name": "@procharity/app-static",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "gen": "npx generate-react-cli",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint ./src",
    "preview": "vite preview",
    "format": "prettier ./src --write",
    "prepare": "husky",
    "test": "yarn test-storybook:ci",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"yarn build-storybook --quiet && yarn http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && yarn test-storybook\""
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "i18next": "^24.2.0",
    "i18next-browser-languagedetector": "^8.0.2",
    "i18next-http-backend": "^3.0.1",
    "imask": "^7.6.1",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.2.0",
    "react-imask": "^7.6.1",
    "react-router": "^7.1.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3.2.3",
    "@eslint/js": "^9.17.0",
    "@storybook/addon-essentials": "8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-onboarding": "8.4.7",
    "@storybook/addon-viewport": "^8.4.7",
    "@storybook/blocks": "8.4.7",
    "@storybook/preview-api": "^8.4.7",
    "@storybook/react": "8.4.7",
    "@storybook/react-vite": "8.4.7",
    "@storybook/test": "^8.4.7",
    "@storybook/test-runner": "^0.21.0",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.0",
    "esbuild": "0.24.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-storybook": "^0.11.1",
    "globals": "^15.13.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-playwright-preset": "^4.0.0",
    "jest-runner": "^29.7.0",
    "lint-staged": "^15.2.11",
    "playwright": "^1.49.1",
    "playwright-chromium": "^1.49.1",
    "prettier": "^3.4.2",
    "sass": "^1.83.0",
    "storybook": "8.4.7",
    "translation-check": "^1.1.0",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.18.1",
    "vite": "^6.0.3",
    "wait-on": "^8.0.1"
  },
  "resolutions": {
    "esbuild": "0.24.0"
  },
  "jest": {
    "preset": "jest-playwright-preset"
  },
  "lint-staged": {
    "src/**/.{ts,tsx}": [
      "yarn lint",
      "yarn test"
    ],
    "src/**/*": "yarn format"
  },
  "packageManager": "yarn@4.6.0",
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
